{
  "manifest_version": 3,
  "name": "Azure Menubar Extension",
  "version": "1.0",
  "description": "A Chrome extension that adds a GIF to the menubar on Azure DevOps pages.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://dev.azure.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}